FROM golang:1.13.3-alpine3.10

WORKDIR /app

RUN apk update \
  && apk add --virtual build-deps gcc git \
  && rm -rf /var/cache/apk/*

RUN addgroup -S golang \
  && adduser -S -G golang golang

COPY microservices/courier .

RUN go install -v ./cmd/...
RUN chown -R golang /app

USER golang

EXPOSE 8080
CMD ["courier"]